<protocol name="Simple" medium="STUTT_FIFO" capacity="4">
  <role name="SENDER">
    <states>
      <state type="initial">A</state>
      <state>B</state>
      <state>C</state>
    </states>

    <rule id="A -!> A">
      <pre>
        <current_state>A</current_state>
      </pre>
      <post>
        <send_message></send_message>
        <next_state>A</next_state>
        <channel></channel>
      </post>
    </rule>

    <rule id="A -!> C">
      <pre>
        <current_state>A</current_state>
      </pre>
      <post>
        <send_message></send_message>
        <next_state>C</next_state>
        <channel></channel>
      </post>
    </rule>

    <rule id="A -?> B">
      <pre>
        <current_state>A</current_state>
        <received_message></received_message>
        <channel></channel>
      </pre>
      <post>
        <next_state>B</next_state>
      </post>
    </rule>

    <rule id="B -!> B">
      <pre>
        <current_state>B</current_state>
      </pre>
      <post>
        <send_message></send_message>
        <next_state>B</next_state>
        <channel></channel>
      </post>
    </rule>

    <rule id="B -!> C">
      <pre>
        <current_state>B</current_state>
      </pre>
      <post>
        <send_message></send_message>
        <next_state>C</next_state>
        <channel></channel>
      </post>
    </rule>

    <rule id="C -?> C">
      <pre>
        <current_state>C</current_state>
        <received_message></received_message>
        <channel></channel>
      </pre>
      <post>
        <next_state>C</next_state>
      </post>
    </rule>

    <rule id="C -?> A">
      <pre>
        <current_state>C</current_state>
        <received_message></received_message>
        <channel></channel>
      </pre>
      <post>
        <next_state>A</next_state>
      </post>
    </rule>

  </role>
</protocol>
